<Window x:Class="Checkers.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkers.Views"
        mc:Ignorable="d"
        Title="AboutWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="{Binding CreatorName}" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
            <TextBlock Text="{Binding EmailAddress}" Margin="0 0 0 5"/>
            <TextBlock Text="{Binding Group}" Margin="0 0 0 5"/>
            <TextBlock Text="{Binding GameDescription}" TextWrapping="Wrap" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
